{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./build"
  },
  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx",
    "jest.config.ts",
    "tsup.config.ts",
    "tsup.ui.index.tsx"
  ],
  "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.ts", "src/**/*.tsx"]
}
